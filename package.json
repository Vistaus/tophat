{
  "name": "tophat",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "packageManager": "yarn@4.5.1",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@girs/gjs": "^4.0.0-beta.16",
    "@girs/gnome-shell": "^46.0.2",
    "@tsconfig/recommended": "^1.0.7",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "scripts": {
    "build": "tsc && cp ./metadata.json ./dist/ && touch ./dist/schemas && rm -rf ./dist/schemas && mkdir ./dist/schemas/ && glib-compile-schemas ./resources/schemas && mv ./resources/schemas/gschemas.compiled ./dist/schemas/",
    "clean": "rm -rf ./dist ./node_modules",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier . --write"
  }
}
